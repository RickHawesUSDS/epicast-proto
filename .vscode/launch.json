{
    "version": "0.2.0",
    "configurations": [

        {
            "command": "yarn debug",
            "name": "server debug",
            "request": "launch",
            "type": "node-terminal",
            "localRoot": "${workspaceFolder}/service",
            "cwd": "${workspaceFolder}/service"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder/website}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Server attach",
            "processId": "${command:PickProcess}",
            "restart": true
        }
    ]
}
