{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "export NODE_OPTIONS='--inspect --trace-deprecation --abort-on-uncaught-exception' && ts-node ./bin/www.ts",
            "name": "server debug",
            "request": "launch",
            "type": "node-terminal",
            "localRoot": "${workspaceFolder}/server",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder/client}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Server attach",
            "processId": "${command:PickProcess}",
            "restart": true
        }
    ]
}
